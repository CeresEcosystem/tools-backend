{
  "name": "tools-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "yarn typeorm:run-migrations && nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "typeorm:migration-generate": "yarn run typeorm migration:generate -d dist/database/mysql/typeOrm.config.js",
    "typeorm:run-migrations": "yarn typeorm migration:run -d ./src/database/mysql/typeOrm.config.ts && yarn typeorm migration:run -d ./src/database/pg/typeOrm.config.ts",
    "typeorm:revert-migration": "yarn typeorm -d ./src/database/mysql/typeOrm.config.ts migration:revert",
    "console": "ts-node -r tsconfig-paths/register src/console.ts",
    "prepare": "husky install",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org ceres-sh --project tools-backend-d2 ./dist && sentry-cli sourcemaps upload --org ceres-sh --project tools-backend-d2 ./dist"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/cli": "^10.1.18",
    "@nestjs/common": "^10.2.6",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.6",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.2.6",
    "@nestjs/platform-socket.io": "^10.2.6",
    "@nestjs/schedule": "^3.0.4",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.1.12",
    "@nestjs/throttler": "^5.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.2.6",
    "@onesignal/node-onesignal": "^2.0.1-beta2",
    "@polkadot/api": "^10.1.3",
    "@sentry/cli": "^2.25.3",
    "@sentry/node": "^7.93.0",
    "@sentry/profiling-node": "^1.3.5",
    "@sora-substrate/api": "^1.15.8",
    "@sora-substrate/math": "^1.15.8",
    "@types/big.js": "^6.1.6",
    "@types/cron": "^2.0.0",
    "@types/multer": "^1.4.7",
    "@types/papaparse": "^5.3.7",
    "@types/request-ip": "^0.0.38",
    "aws-sdk": "^2.1361.0",
    "axios": "^1.3.4",
    "big.js": "^6.2.1",
    "cache-manager": "^5.2.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "ethers": "5.7.1",
    "husky": "^8.0.3",
    "mysql2": "^3.1.0",
    "nestjs-console": "^8.0.0",
    "nestjs-form-data": "^1.9.0",
    "nestjs-telegram": "^1.2.0",
    "papaparse": "^5.4.1",
    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^3.3.0",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.11"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "resolutions": {
    "@polkadot/api": "^10.1.3",
    "@sora-substrate/api": "^1.15.8",
    "@sora-substrate/math": "^1.15.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
